{% extends 'base.html.twig' %}

{% block title %}Sneaker index{% endblock %}

{% block body %}
    <h1>Sneaker index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Type</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sneaker in sneakers %}
            <tr>
                <td>{{ sneaker.id }}</td>
                <td>{{ sneaker.brand }}</td>
                <td>{{ sneaker.model }}</td>
                <td>{{ sneaker.type }}</td>
                <td>{{ sneaker.price }}</td>
                <td>
                    <a href="{{ path('app_sneaker_show', {'id': sneaker.id}) }}">show</a>
                    <a href="{{ path('app_sneaker_edit', {'id': sneaker.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sneaker_new') }}">Create new</a>
{% endblock %}
